<h2><%= @merchant.name %></h2>


<%= link_to 'Items', "/merchants/#{@merchant.id}/items" %><br/>
<%= link_to 'Invoices', "/merchants/#{@merchant.id}/invoices" %><br/><br/>


<p>________________________________________</p>
<h3>Favorite Customers</h3><br/><br/>

<% @top_customers.each do |customer| %>
  <section id="customer-<%= customer.id %>">
    <ol>
      <p><%= customer.first_name %> <%= customer.last_name %> - <%= customer.transactions.count %> - purchases </p>
    </ol>
  </section>
<% end %><br/>


<p>________________________________________</p>
<h3>Items Ready to Ship</h3>


<% @merchant_invoice_items.each do |invoice_item| %>
<section>
  <ol>
    <p><%= invoice_item.item.name %> - <%= "Invoice #" %><%= link_to invoice_item.invoice_id, "/merchants/#{@merchant.id}/invoices/#{invoice_item.id}" %> -  <%= invoice_item.invoice.date %></p>
  </ol>
</section>
<% end %>
