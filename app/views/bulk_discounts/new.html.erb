<h1>New Bulk Discount</h1>
<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts", method: :post, local: true do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :threshold %>
<%= f.number_field :threshold %>

<%= f.label :discount %>
<%= f.number_field :discount %>

<%= f.submit %>
<% end %>