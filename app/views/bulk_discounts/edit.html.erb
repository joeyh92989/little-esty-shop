<h1>Edit Bulk Discount</h1>
<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts/#{@bulk_discount.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :value => @bulk_discount.name%>

  <%= f.label :threshold %>
  <%= f.number_field :threshold, :value => @bulk_discount.threshold %>

  <%= f.label :discount %>
  <%= f.number_field :discount, :value => ((@bulk_discount.discount)*100) %>

  <%= f.submit %>
<% end %>
